@model SistControleEstoque.Models.Movimentacao

@{
    ViewData["Title"] = "Detalhes da Movimentação";
}

<h1 class="my-4">Detalhes da Movimentação</h1>

<div class="card">
    <div class="card-header">
        <h4>Movimentação</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Tipo)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Data)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Data)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Funcionario)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Funcionario.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Produto.Nome)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar para a Lista</a>
</div>
